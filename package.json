{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "CRUD-api application with Node.js",
  "main": "src/index.ts",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/index.ts",
    "start:prod": "cross-env NODE_ENV=production npm run build && node dist/bundle.js",
    "start:multi": "cross-env NODE_ENV=development nodemon --exec ts-node src/balancer.ts",
    "test": "jest --silent",
    "test:verbose": "jest --detectOpenHandles",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RVitaly1978/file-manager.git"
  },
  "author": "Vital Raicheu <rvitaly1978@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "webpack": "^5.90.1",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
